{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "THREE": "readonly"
  },
  "overrides": [
    {
      "files": [
        "tests/**/*.js",
        "playwright.config.js"
      ],
      "env": {
        "node": true,
        "es2021": true
      }
    }
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-var": "error",
    "prefer-const": "error"
  }
}
